# Top-most EditorConfig file
root = true

# -------------------------------------------------------
#    GENERAL .NET & C# CODING CONVENTIONS
# -------------------------------------------------------

[*.cs]

###############################
# Code Style
###############################

# Usar var cuando el tipo es obvio
csharp_style_var_when_type_is_apparent = true:suggestion
# Usar var cuando el tipo no es obvio
csharp_style_var_when_type_is_not_apparent = false:suggestion
# Expresiones lambda modernas
csharp_style_lambda_expression_uses_block_body = false:suggestion
# Preferir expresiones vs statements 
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# Preferir interpolated strings
csharp_style_prefer_interpolated_strings = true:suggestion

# Preferir pattern matching
csharp_style_prefer_pattern_matching = true:suggestion
csharp_style_prefer_switch_expression = true:suggestion

###############################
# Formatting
###############################

# Tabulaci�n y espacios
indent_style = space
indent_size = 4
tab_width = 4

# Using placement
csharp_using_directive_placement = outside_namespace:warning

# New lines
csharp_new_line_before_open_brace = all

# Preferir archivos sin BOM
charset = utf-8

# Organizar usings
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

###############################
# Naming conventions
###############################

# Campos privados `_camelCase`
dotnet_naming_rule.private_fields_should_be_camel_case.severity = warning
dotnet_naming_rule.private_fields_should_be_camel_case.symbols = private_fields
dotnet_naming_rule.private_fields_should_be_camel_case.style = camel_case_underscore

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.accessibility = private

dotnet_naming_style.camel_case_underscore.capitalization = camel_case
dotnet_naming_style.camel_case_underscore.required_prefix = _

# Async methods deben terminar en Async
dotnet_naming_rule.async_methods_end_with_async.severity = warning
dotnet_naming_rule.async_methods_end_with_async.symbols = async_methods
dotnet_naming_rule.async_methods_end_with_async.style = end_with_async

dotnet_naming_symbols.async_methods.applicable_kinds = method
dotnet_naming_symbols.async_methods.applicable_accessibilities = *
dotnet_naming_symbols.async_methods.required_modifiers = async

dotnet_naming_style.end_with_async.capitalization = pascal_case
dotnet_naming_style.end_with_async.required_suffix = Async

###############################
# Nullable
###############################

# Obligatorio usar nullable en todos los archivos
dotnet_style_require_accessibility_modifiers = always:warning
dotnet_style_null_propagation = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion


# -------------------------------------------------------
#    ASP.NET CORE / MINIMAL APIs / FASTENDPOINTS
# -------------------------------------------------------

# Preferir lambdas y tipos locales modernos
csharp_style_prefer_local_over_anonymous_function = true:suggestion

# Evitar controladores gigantes
csharp_style_prefer_primary_constructors = true:suggestion

# Evitar var excesivo en endpoints
csharp_style_var_for_built_in_types = true:suggestion

# Evitar directivas global using innecesarias
dotnet_diagnostic.IDE0005.severity = warning


# -------------------------------------------------------
#    CLEAN ARCHITECTURE PRACTICES
# -------------------------------------------------------

# Entidades, AggregateRoots y ValueObjects deben ser PascalCase
dotnet_diagnostic.CA1707.severity = none

# Evitar capturar excepciones demasiado gen�ricas
dotnet_diagnostic.CA1031.severity = warning

# Forzar interfaces con I prefix
dotnet_naming_rule.interfaces_should_start_with_I.severity = warning
dotnet_naming_rule.interfaces_should_start_with_I.symbols = interfaces
dotnet_naming_rule.interfaces_should_start_with_I.style = begin_I

dotnet_naming_symbols.interfaces.applicable_kinds = interface
dotnet_naming_style.begin_I.capitalization = pascal_case
dotnet_naming_style.begin_I.required_prefix = I


# -------------------------------------------------------
#    EF CORE 8/9/10
# -------------------------------------------------------

# Intentar usar Owned Types
dotnet_diagnostic.EF1000.severity = suggestion

# Reglas de indices compuestos
dotnet_diagnostic.EF1002.severity = suggestion

# Evitar queries sin Where
dotnet_diagnostic.EF1001.severity = suggestion


# -------------------------------------------------------
#    FILE SCOPED NAMESPACES
# -------------------------------------------------------

# Requerir namespace moderno (file-scoped)
csharp_style_namespace_declarations = file_scoped:warning


# -------------------------------------------------------
#    USINGS
# -------------------------------------------------------

# Remoci�n autom�tica de usings no usados
dotnet_remove_unnecessary_imports = true


# -------------------------------------------------------
#   ANALYZERS & QUALITY
# -------------------------------------------------------

# Warnings como errores (opcional)
# dotnet_analyzer_diagnostic.severity = error

# Evitar m�todos est�ticos donde no corresponde
dotnet_diagnostic.CA1822.severity = silent

# Evitar allocation innecesaria
dotnet_analyzer_diagnostic.category-performance.severity = suggestion
